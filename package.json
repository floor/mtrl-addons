{
  "name": "mtrl-addons",
  "version": "0.1.1",
  "description": "Additional components and utilities for the mtrl system, featuring forms, specialized elements, and extended functionality for modern applications",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "build": "bun run ./build.js",
    "build:app": "bun run ../mtrl-app/build.js",
    "dev": "bun run ./build.js --watch",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "debug:list": "bun run ../mtrl-app/scripts/debug/list-addons.ts",
    "debug:list:interactive": "bun run ../mtrl-app/scripts/debug/list-addons.ts --interactive"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/floor/mtrl-addons.git"
  },
  "keywords": [
    "mtrl",
    "addons",
    "components",
    "forms",
    "ui"
  ],
  "author": "floor",
  "license": "MIT",
  "peerDependencies": {
    "mtrl": "^0.2.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "^1.0.0",
    "madge": "^8.0.0",
    "mtrl": "^0.2.8",
    "standard": "^17.0.0",
    "typescript": "^5.0.0"
  }
}
